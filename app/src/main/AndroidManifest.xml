            android:name=".MenuActivity"
            android:exported="false" />
        <activity
            android:name=".HacerActivity"
            android:exported="false" />
        <activity
            android:name=".AudiosEstresActivity"
            android:exported="false" />
        <activity
            android:name=".AudiosAnsiedadActivity"
            android:exported="false" />
        <activity
            android:name=".AudiosDepresionActivity"
            android:exported="false" />

        <activity
            android:name=".AyudaActivity"
