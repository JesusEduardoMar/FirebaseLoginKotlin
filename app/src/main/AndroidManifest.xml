        <activity
            android:name=".ApoyoActivity"
            android:exported="false" />
        <activity
            android:name=".PsiquiatriaActivity"
            android:exported="true">
            <!-- Intent-filter para ser iniciado desde enlaces, por ejemplo, desde Google Meet -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" />
            </intent-filter>
        </activity>

        <activity
            android:name=".pantalla.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignInActivity"
            android:exported="true" />
        <activity android:name=".MainMenuActivity" />
        <activity android:name=".DeleteAccountActivity" />
        <activity android:name=".UpdatePasswordActivity" />
        <activity android:name=".CheckEmailActivity" />
        <activity android:name=".AccountRecoveryActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Main" />
        <activity android:name=".SignUpActivity" />
    </application>

</manifest>