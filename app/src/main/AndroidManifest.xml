        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FirebaseLoginKotlin"
        tools:targetApi="31" >
        <activity
            android:name=".CalendarActivity"
            android:exported="false" />
        <activity
            android:name=".CuestionarioActivity"
            android:exported="false" />
        <activity
            android:name=".AboutUsActivity"
            android:exported="false" />
        <activity
            android:name=".MensajesActivity"
            android:exported="false" />
        <activity
            android:name=".AgendarCitaActivity"
            android:exported="false" />
